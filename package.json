{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/mya-ake/portfolio.git",
  "author": "mya-ake <make.app.ts@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "run-s gen:graphql",
    "build:client": "nx build --project=@mya-ake-com/client",
    "build:server": "nx build --project=@mya-ake-com/server",
    "predev": "run-s gen:graphql",
    "dev": "APP_ENV=local nx run-many --target=dev --projects=@mya-ake-com/client,@mya-ake-com/server --parallel",
    "lint": "nx run-many --target=lint --all --parallel",
    "lint:fix": "nx run-many --target=lint-fix --all --parallel",
    "format": "nx run-many --target=format --all --parallel",
    "format:check": "nx run-many --target=format-check --all --parallel",
    "test:unit": "nx run-many --target=test:unit --all --parallel",
    "gen:graphql": "graphql-codegen --config codegen.yml",
    "prepare": "husky install",
    "predeploy": "run-s gen:graphql",
    "deploy": "ts-node --project scripts/tsconfig.json scripts/build-and-deploy/index.ts",
    "deploy:client:dev": "echo 'No deploy script'",
    "deploy:client:prod": "echo 'No delpoy script'",
    "deploy:server:dev": "nx run @mya-ake-com/server:deploy-dev",
    "deploy:server:prod": "nx run @mya-ake-com/server:deploy-prod"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.4",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-graphql-request": "^4.4.10",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "@mya-ake/command-line-utils": "^0.1.1",
    "@mya-ake/eslint-config-ts": "^1.1.11",
    "@nrwl/cli": "14.4.0",
    "@nrwl/next": "14.4.0",
    "@nrwl/react": "14.4.0",
    "@nrwl/web": "14.4.1",
    "@nrwl/workspace": "14.4.0",
    "@types/node": "16",
    "@types/react": "^18.0.14",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "nx": "14.4.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "vitest": "^0.16.0"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,md,yml,html,graphql}": "prettier --write"
  },
  "dependencies": {
    "next": "^12.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
