{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/mya-ake/portfolio.git",
  "author": "mya-ake <make.app.ts@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "run-s gen:graphql",
    "build": "ts-node --project scripts/tsconfig.json scripts/build/index.ts",
    "build:vercel": "ts-node --project scripts/tsconfig.json scripts/build-on-vercel/index.ts",
    "predev": "run-s gen:graphql",
    "dev": "nx run-many --target=dev --all --parallel",
    "lint": "nx run-many --target=lint --all --parallel",
    "lint:fix": "nx run-many --target=lint-fix --all --parallel",
    "format": "nx run-many --target=format --all --parallel",
    "format:check": "nx run-many --target=format-check --all --parallel",
    "test:unit": "nx run-many --target=test:unit --all --parallel",
    "gen:graphql": "graphql-codegen --config codegen.yml",
    "prepare": "husky install",
    "predeploy": "run-s gen:graphql",
    "deploy": "ts-node --project scripts/tsconfig.json scripts/build-and-deploy/index.ts",
    "deploy:client:dev": "vercel --token ${VERCEL_TOKEN}",
    "deploy:client:prod": "vercel --token ${VERCEL_TOKEN} --prod",
    "deploy:server:dev": "nx run @mya-ake-com/server:deploy-dev",
    "deploy:server:prod": "nx run @mya-ake-com/server:deploy-prod"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.4.10",
    "@graphql-codegen/typescript-graphql-request": "^4.4.7",
    "@graphql-codegen/typescript-operations": "^2.3.7",
    "@graphql-codegen/typescript-resolvers": "^2.6.3",
    "@mya-ake/command-line-utils": "^0.1.1",
    "@mya-ake/eslint-config-ts": "^1.0.4",
    "@nrwl/cli": "14.1.6",
    "@nrwl/workspace": "14.1.5",
    "@swc/core": "^1.2.102",
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.0",
    "@types/node": "^17.0.33",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "nx": "14.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "vercel": "^24.2.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,md,yml,html,graphql}": "prettier --write"
  }
}
