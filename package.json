{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/mya-ake/portfolio.git",
  "author": "mya-ake <make.app.ts@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "run-s gen:graphql",
    "build": "ts-node --project scripts/tsconfig.json scripts/build/index.ts",
    "build:vercel": "ts-node --project scripts/tsconfig.json scripts/build-on-vercel/index.ts",
    "predev": "run-s gen:graphql",
    "dev": "lerna run dev",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "format": "lerna run format",
    "format:check": "lerna run format:check",
    "test:unit": "lerna run test:unit",
    "gen:graphql": "graphql-codegen --config codegen.yml",
    "prepare": "husky install",
    "predeploy": "run-s gen:graphql",
    "deploy": "ts-node --project scripts/tsconfig.json scripts/build-and-deploy/index.ts",
    "deploy:client:dev": "vercel --token ${VERCEL_TOKEN}",
    "deploy:client:prod": "vercel --token ${VERCEL_TOKEN} --prod",
    "deploy:server:dev": "lerna run --scope @mya-ake-com/server deploy:dev",
    "deploy:server:prod": "lerna run --scope @mya-ake-com/server deploy:prod"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/introspection": "^2.0.0",
    "@graphql-codegen/typescript": "^2.0.0",
    "@graphql-codegen/typescript-graphql-request": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^2.0.1",
    "@graphql-codegen/typescript-resolvers": "^2.0.0",
    "@mya-ake/command-line-utils": "^0.1.1",
    "@mya-ake/eslint-config-ts": "^1.0.4",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.3.3",
    "eslint": "^8.0.1",
    "husky": "^7.0.0",
    "jest": "26",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "vercel": "^23.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,md,yml,html,graphql}": "prettier --write"
  }
}
