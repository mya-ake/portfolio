{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["esnext"],
    "types": ["node"],
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true
  }
}
